@using Models.Dtos
@{
    var result = ViewData["auctions"] as PagedResult<ItemModel>;
}

<section class="w-50">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-12 col-lg-12 col-xl-12 offset-xl-1">
                <form class="form-inline d-flex" action="/auction/user?pageNumber=@(result.PageNumber+1)&pageSize=@result.PageSize&searchPhrase" method="get">
            <input id="searchText" value="@result.SearchPhrase" class="form-control mr-sm-2" type="search" name="searchPhrase" placeholder="searchPhrase" aria-label="Search">
            <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Search</button>
          </form>
                <h1 class="text-light">Auctions: </h1>

                <table class="table table-light ">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Category</th>
                            <th scope="col">Added Date</th>
                            <th scope="col">Active</th>
                            <th scope="col">Likes</th>
                            <th scope="col">Comments</th>
                            <th scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>

                        @if (result is not null)
                        {
                            @foreach (var item in result.Items)
                            {
                                <tr onclick="window.location='/auction/@item.Id/details';">
                                    <td>@item.Title</td>
                                    <td>@item.Category?.Name</td>
                                    <td>@item.Created</td>
                                    <td>@item.IsActive</td>
                                    <td>@item.Likes</td>
                                    <td>@item.Comments.Count</td>
                                    <td class="d-flex justify-content-around">
                            <a href="/auction/@item.Id/edit" class="edit" title="Edit" data-toggle="tooltip"><i class="fa fa-solid fa-edit"></i></a>
                            <a href="/auction/@item.Id/delete" class="delete" title="Delete" data-toggle="tooltip"><i class="fa fa-solid fa-trash"></i></a>
                        </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="mb-3 text-light">@result.ItemsFrom - @if(result.ItemsTo > result.TotalItemsCount){ @result.TotalItemsCount; }else{ @result.ItemsTo; } Total items: @result.TotalItemsCount Items</div>
    <div class="mb-3 text-light">Page: @(result.PageNumber) </div>
        <nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/auction/user?pageNumber=@(result.PageNumber-1)&pageSize=@result.PageSize&searchPhrase=@result.SearchPhrase" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
            @for (int i = 0; i < result.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/auction/user?pageNumber=@(i+1)&pageSize=@result.PageSize&searchPhrase=@result.SearchPhrase">@(i+1)</a></li>
            } 

    <li class="page-item">
      <a class="page-link" href="/auction/user?pageNumber=@(result.PageNumber+1)&pageSize=@result.PageSize&searchPhrase=@result.SearchPhrase" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
</div>
        </div>
    </div>
</section>

<style>
    tr{
        cursor: pointer;
    }
</style>