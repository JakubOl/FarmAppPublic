@model Models.Entities.CategoryModel;

@{
	var categories = ViewData["categories"] as List<CategoryModel>;
}

<section class="w-50">
	<div class="container py-5 h-100">
		<div class="row d-flex align-items-center justify-content-center h-100">
			<div class="col-md-8 col-lg-8 col-xl-8 offset-xl-1">
				<h1 class="text-light">Categories: </h1>

				<table class="table table-light ">
				  <thead>
					<tr>
					  <th scope="col">#</th>
					  <th scope="col">Category Name</th>
					  <th scope="col"></th>
					</tr>
				  </thead>
				  <tbody>
						@for (var i = 0; i < categories.Count; i++)
						{
						<tr>
							<th scope="row">@i</th>
							<td>@categories[i].Name</td>
							<td class="align-middle">
								<form class="d-flex justify-content-center" method="post" action="/auction/category/@categories[i].Id">
									<button type="submit" class="btn btn-sm btn-danger">Delete</button>
								</form>
							  </td>
						</tr>
						}
				  </tbody>
				</table>
				<h3 class="text-light">Create Category</h3>

				<form method="post" action="/auction/category/create">
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					<div class="form-outline mb-4">
						<input type="text" id="RoleName" class="form-control form-control-lg" name="Name" />
						<label class="form-label text-light" asp-for="Name">Category name</label>
						<span class="text-danger" asp-validation-for="Name"></span>
					</div>

					<button type="submit" class="btn btn-primary btn-lg btn-block w-100">Stwórz typ</button>

				</form>
			</div>
		</div>
	</div>
</section>