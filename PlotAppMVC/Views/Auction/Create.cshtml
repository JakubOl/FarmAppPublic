@model Models.Dtos.ItemDto

@{
    var categories = ViewData["categories"] as List<CategoryModel>;
}

<section class="h-100 d-flex">
    <div class="container h-100">
        <div class="row d-flex justify-content-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Create Auction</p>
                            <form method="post" action="/auction/create" enctype="multipart/form-data">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="Title" asp-for="Title">Title</label>
                                        <input type="text" id="Title" class="form-control" name="Title" placeholder="Title" value="@Model?.Title" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="Description" asp-for="Description">Description</label>
                                        <textarea class="form-control" name="Description" id="inputBody" rows="6">@Model?.Description</textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="Price" asp-for="Price">Price</label>

                                        <input type="text" id="Price" class="form-control" value="@Model?.Price" name="Price" placeholder="Price" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">

                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="CategoryId" asp-for="CategoryId">Category</label>

                                        <select class="form-control form-select" id="CategoryId" name="CategoryId">
                                            @if (categories is not null)
                                            {
                                                @foreach (var category in categories)
                                                {
                                                    <option value="@category.Id">@category.Name</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="Image" asp-for="ImageFile">Image</label>
                                        <input asp-for="ImageFile" accept="image/*" id="Image" class="form-control" name="ImageFile" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="true" name="IsActive" id="IsActive">
                                    <label class="form-check-label" for="IsActive">
                                        Active
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg">Create Auction</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>